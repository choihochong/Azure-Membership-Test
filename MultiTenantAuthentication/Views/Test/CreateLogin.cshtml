@model MultiTenantAuthentication.Models.TenantLoginViewModel

@{
    ViewBag.Title = "CreateLogin";
}

<h2>CreateLogin</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>TenantLoginViewModel</legend>
        <p>
            @Html.LabelFor(f => Model.Tenant.Name)    <br />
            @Html.EditorFor(f => Model.Tenant.Name)
            @Html.ValidationMessageFor(f=> Model.Tenant.Name)
        </p>
        <p>
            @Html.LabelFor(f => Model.UserProfile.Username)    <br />
            @Html.EditorFor(f => Model.UserProfile.Username)    <br />
            @Html.ValidationMessageFor(f=> Model.UserProfile.Username)
        </p>
        <p>
            Password<br />
            @Html.Password("Password")
        </p>
        <p>
            Confirm Password<br />
            @Html.Password("ConfirmPassword")
        </p>
        <p>
            @Html.LabelFor(f => Model.UserProfile.FirstName)<br />
            @Html.EditorFor(f => Model.UserProfile.FirstName)
        </p>
            <p>
            @Html.LabelFor(f => Model.UserProfile.LastName)<br />
            @Html.EditorFor(f => Model.UserProfile.LastName)
        </p>
        <p>
            Email<br />
            @Html.Editor("Email")
        </p>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

